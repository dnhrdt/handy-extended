# EditorConfig for General Projects
# Version: 2.00
# Timestamp: 2025-07-27 21:42 CET
#
# This configuration provides basic editor settings
# suitable for any project type

root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Programming languages
[*.{py,pyw}]
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{java,kt,scala}]
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.{cs,vb}]
indent_size = 4

[*.{go}]
indent_style = tab
indent_size = 4

[*.{rs}]
indent_size = 4

# Web technologies
[*.{html,htm,xml,xhtml}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

# Documentation
[*.{md,markdown,rst}]
indent_size = 2
trim_trailing_whitespace = false

[*.{txt}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_size = 2

[*.{toml}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_size = 2

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Docker
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Git
[.gitconfig]
indent_style = tab
indent_size = 4

# Specific files
[package.json]
indent_size = 2

[*.lock]
insert_final_newline = false
