# EditorConfig for JavaScript/TypeScript Projects
# Version: 2.00
# Timestamp: 2025-07-27 21:42 CET
# JavaScript/TypeScript development with modern tooling

root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS/SCSS/LESS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_style = space
indent_size = 2

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Git files
[.gitconfig]
indent_style = tab
indent_size = 4

# Lock files and generated files
[*.lock]
insert_final_newline = false

[*.min.{js,css}]
insert_final_newline = false
